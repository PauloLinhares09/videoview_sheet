<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/constraintViewAreExpanded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintContainer"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="230dp"
            android:elevation="1dp"
            android:background="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:controller_layout_id="@layout/layout_controllers_videoplayer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
        </com.google.android.exoplayer2.ui.PlayerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:text="Thanos vs Stark"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:id="@+id/tvTitleCollapsed" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintStart_toEndOf="@+id/constraintContainer"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/imageView"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="1.0"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded"
            app:srcCompat="@drawable/ic_close_small"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp" android:layout_marginEnd="90dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_icon_play"
            android:id="@+id/exo_play_aux"
            app:layout_constraintStart_toEndOf="@+id/exo_prev_aux" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/exo_nex_aux" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvTitleCollapsed"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_controls_rewind"
            android:id="@+id/exo_prev_aux"
            app:layout_constraintStart_toEndOf="@+id/constraintContainer" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/exo_play_aux"
            app:layout_constraintTop_toTopOf="@+id/exo_play_aux" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_controls_fastforward"
            android:id="@+id/exo_nex_aux"
            app:layout_constraintBottom_toBottomOf="@+id/exo_play_aux"
            app:layout_constraintTop_toTopOf="@+id/exo_play_aux" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
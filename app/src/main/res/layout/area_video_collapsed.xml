<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/constraintViewAreCollapsed"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintContainer"
            android:clickable="true"
            android:layout_width="155dp"
            android:layout_height="88dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
        </com.google.android.exoplayer2.ui.PlayerView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            tools:text="Thanos vs Stark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:id="@+id/tvTitleCollapsed"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/constraintContainer"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/constraintContainer"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded"
            app:srcCompat="@drawable/ic_close_small"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="5dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_icon_play"
            android:id="@+id/exo_play_aux"
            app:layout_constraintStart_toEndOf="@+id/exo_prev_aux" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/exo_nex_aux" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvTitleCollapsed"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_controls_rewind"
            android:id="@+id/exo_prev_aux"
            app:layout_constraintStart_toEndOf="@+id/constraintContainer" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/exo_play_aux"
            app:layout_constraintTop_toTopOf="@+id/exo_play_aux" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_controls_fastforward"
            android:id="@+id/exo_nex_aux" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/exo_play_aux"
            app:layout_constraintTop_toTopOf="@+id/exo_play_aux" android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
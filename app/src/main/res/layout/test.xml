<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/app_bar"
        android:background="@android:color/black"
        app:layout_anchorGravity="bottom|end">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_controls_fastforward"
            android:id="@+id/exo_controls_fastforward"
            app:layout_constraintStart_toEndOf="@+id/exo_icon_pause"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/exo_icon_pause"
            app:layout_constraintBottom_toBottomOf="@+id/exo_icon_pause"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_icon_pause"
            android:id="@+id/exo_icon_pause"
            app:layout_constraintStart_toEndOf="@+id/exo_controls_rewind" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/exo_controls_fastforward" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_controls_rewind"
            android:id="@+id/exo_controls_rewind"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/exo_icon_pause"
            app:layout_constraintTop_toTopOf="@+id/exo_icon_pause"
            app:layout_constraintBottom_toBottomOf="@+id/exo_icon_pause"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".MainActivity">
    <!--tools:showIn="@layout/layout_video_view"-->

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:cardElevation="2dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@android:color/white">

            <TextView
                    tools:text="Jogue seu ranking no lixo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:id="@+id/tvTitle" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="Versão em áudio"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="left|center"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_audio_max"
                    android:drawableTint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/emp_audio_version" app:layout_constraintStart_toStartOf="@+id/tvTitle"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                    android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"/>

            <!--TODO remove this gone when enable button on the next sprint-->
            <ImageButton
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_media_download"
                    android:id="@+id/emp_download"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@+id/emp_audio_version"
                    app:layout_constraintBottom_toBottomOf="@+id/emp_audio_version"/>

            <!--Dont like-->
            <ImageButton
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_media_thumbs_down"
                    android:id="@+id/emp_dont_like"
                    app:layout_constraintEnd_toStartOf="@+id/emp_download" android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@+id/emp_download"
                    app:layout_constraintBottom_toBottomOf="@+id/emp_download"
                    android:visibility="gone"/>

            <!--Like-->

            <!--TODO remove this gone when enable button on the next sprint-->
            <LinearLayout
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_media_thumbs_up"
                    android:id="@+id/linearLayout1"
                    app:layout_constraintEnd_toStartOf="@+id/emp_dont_like" android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@+id/emp_dont_like"
                    app:layout_constraintBottom_toBottomOf="@+id/emp_dont_like">

                <ImageButton
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_media_thumbs_up"
                        android:id="@+id/emp_like"
                        android:visibility="gone"/>

                <ProgressBar
                        android:id="@+id/pb_like"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
            </LinearLayout>

            <!--TODO remove this gone when enable button on the next sprint-->
            <LinearLayout
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_media_favorite"
                    android:id="@+id/linearLayout2"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout1" android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout1"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout1">

                <ImageButton
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_media_favorite"
                        android:id="@+id/emp_favourite"
                        android:visibility="gone"/>
                <ProgressBar
                        android:id="@+id/pb_favourite"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

            </LinearLayout>
            <View
                    android:background="#CCCCCC"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:id="@+id/button3" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/emp_audio_version"/>
            <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:elevation="1dp"
                    android:id="@+id/ivAuthor"
                    app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp">

            </ImageView>
            <TextView
                    tools:text="Palavra do Estrategista"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAuthorName"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toEndOf="@+id/ivAuthor" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@+id/ivAuthor"
                    app:layout_constraintBottom_toTopOf="@+id/tvTimeAgo" android:layout_marginBottom="8dp"/>
            <TextView
                    tools:text="3 dias atrás"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTimeAgo"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintStart_toStartOf="@+id/tvAuthorName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="@+id/ivAuthor"/>
            <TextView
                    tools:text="@string/description_test"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDescription" app:layout_constraintStart_toStartOf="@+id/ivAuthor"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTimeAgo" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:text="@string/show_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:tag="0"
                    android:id="@+id/emp_show_more" app:layout_constraintStart_toStartOf="@+id/tvDescription"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDescription"
                    app:layout_constraintBottom_toTopOf="@+id/button"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:id="@+id/button"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="17dp"
                    app:layout_constraintStart_toStartOf="@+id/tvDescription"
                    app:layout_constraintEnd_toEndOf="@+id/tvDescription"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <TextView
            android:text="Próximos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"/>

    <!--TODO remove this gone when enable button on the next sprint-->
    <Switch
            android:visibility="gone"
            android:text="Reprodução automática "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:gravity="right|center"
            android:theme="@style/Theme.ToogleTheme"
            android:id="@+id/switchAutomaticNextPlay" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView9" app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rvPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="8dp"
            tools:listitem="@layout/item_card"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSearchMediaAssociated"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switchAutomaticNextPlay"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:lottie_rawRes="@raw/search_medias"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView"/>
        <TextView
                android:text="Pesquisando conteúdo relacionado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clNotThereAreMediaAssociated"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/switchAutomaticNextPlay"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:text="Não há conteúdo relacionado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView1001"
                android:gravity="center"
                android:drawableTop="@android:drawable/ic_menu_close_clear_cancel"
                android:drawableTint="@android:color/black"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
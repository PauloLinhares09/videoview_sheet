<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".MainActivity">
    <!--tools:showIn="@layout/layout_video_view"-->

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:cardElevation="2dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView
                    android:text="Jogue seu ranking no lixo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:id="@+id/tvTitle" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"/>
            <Button
                    android:text="Versão em áudio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="left|center"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_audio_max"
                    android:drawableTint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/emp_audio_version" app:layout_constraintStart_toStartOf="@+id/tvTitle"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                    app:layout_constraintEnd_toStartOf="@+id/emp_favourite"
                    android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"/>
            <ImageButton
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_download"
                    android:id="@+id/emp_download"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@+id/emp_audio_version"
                    app:layout_constraintBottom_toBottomOf="@+id/emp_audio_version"/>
            <ImageButton
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_thumbs_down"
                    android:id="@+id/emp_dont_like"
                    app:layout_constraintEnd_toStartOf="@+id/emp_download" android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@+id/emp_download"
                    app:layout_constraintBottom_toBottomOf="@+id/emp_download"/>
            <ImageButton
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_thumbs_up"
                    android:id="@+id/emp_like"
                    app:layout_constraintEnd_toStartOf="@+id/emp_dont_like" android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@+id/emp_dont_like"
                    app:layout_constraintBottom_toBottomOf="@+id/emp_dont_like"/>
            <ImageButton
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_favorite"
                    android:id="@+id/emp_favourite"
                    app:layout_constraintEnd_toStartOf="@+id/emp_like" android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@+id/emp_like"
                    app:layout_constraintBottom_toBottomOf="@+id/emp_like"/>
            <View
                    android:background="#CCCCCC"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:id="@+id/button3" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/emp_audio_version"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="43dp"
                    android:layout_height="42dp"
                    app:cardCornerRadius="50dp"
                    android:elevation="1dp"
                    android:background="@android:color/black"
                    android:id="@+id/cardImageAuthor"
                    app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp">

                <ImageView
                        android:id="@+id/ivAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_account_circle"
                        android:tint="@color/colorPrimaryDark"
                        android:scaleType="centerCrop"
                        />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:text="Palavra do Estrategista"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAuthorName"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toEndOf="@+id/cardImageAuthor" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@+id/cardImageAuthor"
                    app:layout_constraintBottom_toTopOf="@+id/tvTimeAgo" android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="3 dias atrás"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTimeAgo"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintStart_toStartOf="@+id/tvAuthorName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="@+id/cardImageAuthor"/>
            <TextView
                    tools:text="@string/description_test"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDescription" app:layout_constraintStart_toStartOf="@+id/cardImageAuthor"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTimeAgo" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:text="@string/show_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:tag="0"
                    android:id="@+id/emp_show_more" app:layout_constraintStart_toStartOf="@+id/tvDescription"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDescription" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <TextView
            android:text="Próximos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"/>
    <Switch
            android:text="Reprodução automática "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:gravity="right|center"
            android:id="@+id/switchAutomaticNextPlay" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView9" app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rvPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="8dp"
            tools:listitem="@layout/item_card"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/switchAutomaticNextPlay"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/bg_video_controllers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_controllers_play">

    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_dashboard_black_24dp"
            android:id="@+id/ib_state_bottomsheet"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

    <!-- TODO remove it on the new next Sprint -->
    <ImageButton
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_more_vert_black_24dp"
            android:id="@+id/imageButton8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_fullscreen"
            android:id="@+id/ibFullscreenEnable"
            app:layout_constraintEnd_toStartOf="@+id/imageButton8" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/exo_controls_play"
            android:id="@+id/exo_play"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ibFullscreenEnable"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/exo_position"
            app:layout_constraintVertical_bias="0.489" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/exo_ffwd"
            app:layout_constraintStart_toEndOf="@+id/exo_rew" android:layout_marginStart="8dp"/>
    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_controls_rewind"
            android:id="@+id/exo_rew"
            style="@style/ExoMediaButton.Rewind"
            app:layout_constraintStart_toEndOf="@+id/exo_prev"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/exo_play" app:layout_constraintBottom_toBottomOf="@+id/exo_play"/>
    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_controls_fastforward"
            android:id="@+id/exo_ffwd"
            style="@style/ExoMediaButton.FastForward"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/exo_next"
            app:layout_constraintTop_toTopOf="@+id/exo_play" app:layout_constraintBottom_toBottomOf="@+id/exo_play"/>
    <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/exo_progress"
            app:ad_marker_color="@color/colorAccent"
            app:scrubber_color="@android:color/white"
            app:played_color="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:id="@+id/exo_position" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/exo_progress"/>
    <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:id="@+id/exo_duration" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/exo_progress"/>
    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_controls_previous"
            android:id="@+id/exo_prev"
            style="@style/ExoMediaButton.Previous"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/exo_rew"
            app:layout_constraintBottom_toBottomOf="@+id/exo_rew"/>
    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/exo_controls_next"
            android:id="@+id/exo_next"
            style="@style/ExoMediaButton.Next"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/exo_ffwd"
            app:layout_constraintBottom_toBottomOf="@+id/exo_ffwd"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/exo_controls_pause"
            android:id="@+id/exo_pause"
            app:layout_constraintEnd_toStartOf="@+id/exo_ffwd"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/exo_rew"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/exo_play" app:layout_constraintBottom_toBottomOf="@+id/exo_play"/>
    <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/cardProgress"
            app:cardBackgroundColor="@android:color/black"
            app:cardCornerRadius="5dp"
            app:layout_constraintEnd_toStartOf="@+id/exo_ffwd"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/exo_rew"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/exo_play" app:layout_constraintBottom_toBottomOf="@+id/exo_play"
            android:visibility="visible" tools:layout_editor_absoluteX="181dp" tools:layout_editor_absoluteY="181dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/progressBarBuffer"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>